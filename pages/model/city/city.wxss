.city{
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
}
.city .city-real{
  font-size: 34rpx;
  color: #333333;
  padding-left: 36rpx;
}

.city-item .letter{
   height: 60rpx;
   background-color: #fafafa;
   line-height: 60rpx;
}
.city-item .letter text{
  padding-left: 30rpx;
  font-size: 34rpx;
  color:#666666;
}
