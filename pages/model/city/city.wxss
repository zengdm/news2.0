.address .address-city{
   height: 100rpx;
  line-height: 100rpx;
  margin:0 36rpx;
  font-size: 34rpx;
  color:#333333;
  border-bottom: 1rpx solid #f2f2f2;
}

.letter-item {
  width: 52rpx;
  background-color: #fff;
  position: fixed;
  top: 50%;
  right: 10rpx;
  transform: translate(0, -50%);
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.15);
  border-radius:200rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
}

.letter-li {
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  font-size:28rpx;
  color:#999;
  line-height:38rpx; 
}

.add-color {
  color:#33adff;
  font-weight: bold;
  font-size:35rpx;
}

