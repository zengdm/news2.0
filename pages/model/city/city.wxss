.search-view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:20rpx;
    color:#fff;
}
.search-view:after{
    content:'';
    height:0;
    clear:both;
    overflow: hidden;
    display: block;
}
.search-form{
    width:100%;
    height:56rpx;
}
.search-input{
    position:relative;
    display: inline-block;
    width:100%;
    height:100%;
    background:#f4f4f4;
    font-size:24rpx;
    border-radius:10rpx;
    color: #000;
    padding-left: 55rpx;
    box-sizing: border-box;
    border: 1rpx solid #ededef;
}
.search-icon{
    position:absolute;
    left:38rpx;
    top:36rpx;
    z-index:1000;
}

.current{
  height: 100rpx;
  background-color: #fafafa;
  padding-top: 36rpx;
  box-sizing: border-box;
  /* line-height: 100rpx; */
  /* border-top: 1rpx solid #e5e5e5; */
}

.current .current-city{
  font-size: 28rpx;
  color: #666666;
  padding-left: 30rpx;
