.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 500rpx;
}

.title {
  position: absolute;
  bottom: 30rpx;
  left: 26rpx;
  color: #fff;
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: 600;
}

.title-little {
  font-weight: normal;
  font-size: 30rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.swiper-container .dots .dot.active {
  width: 24rpx;
  background: #00b7ee;
}

.stream-item {
  background-color: #f4f4f4;
  overflow: hidden;
}

.little-one, .little-three, .big-one {
  padding: 26rpx 24rpx;
  margin-bottom: 18rpx;
  background-color: #fff;
}

.little-one {
  display: flex;
  overflow: hidden;
  justify-content: space-between;
}

.little-one-text {
  width: 440rpx;
}

.little-one-photo image {
  min-width: 244rpx;
  min-height: 158rpx;
  width: 100%;
}

.little-three .stream-item-photo {
  display: flex;
}

.little-three .stream-item-photo image {
  width: 100%;
  min-width: 226rpx;
  min-height: 150rpx;
}

.big-one .stream-item-photo image {
  width: 100%;
  min-width: 702rpx;
  min-height: 386rpx;
}

.stream-item-title {
  font-size: 30rpx;
  color: #292929;
  line-height: 48rpx;
  margin-bottom: 26rpx;
}

.stream-item-info {
  font-size: 22rpx;
  color: #adadad;
  display: flex;
  justify-content: space-between;
}

.stream-item-info text {
  margin-right: 10rpx;
}

.stream-item-photo {
  padding-bottom: 18rpx;
}

.little-one-photo, .big-img-box, .img-box {
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 5rpx;
}

.big-img-box {
  width: 702rpx;
  height: 386rpx;
}

.img-box {
  width: 226rpx;
  height: 150rpx;
}

.little-one-photo {
  width: 244rpx;
  height: 158rpx;
}

.rich {
  font-size: 50rpx;
}

.little-one .stream-item-title {
  min-height: 96rpx;
}
