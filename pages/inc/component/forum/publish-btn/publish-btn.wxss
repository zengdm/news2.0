.publish-page{
  width: 100%;
  height:100%;
  overflow: hidden;
  background: #f8f8f8;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
 display: none;
}

.publish-page{
  padding-top: 426rpx;
  box-sizing: border-box;
}
.publish-page-item{
  width: 100%;
  height:80%;
  text-align: center;
}


.publish-page-item-list{
  display: inline-block;
  margin: 0 60rpx 90rpx 60rpx;
  font-size:28rpx;
  color:#2e3033;
}
.publish-page-item-list image{
  width: 140rpx;
  margin-bottom: 10rpx;
}
.publish-page-close{
  text-align: center;
}
.publish-page-close image{
  width: 46rpx;
}
.publish-block{
    display: block;
}