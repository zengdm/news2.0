.publish-btn{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  position: fixed;
  z-index: 10;
  bottom: 50rpx;
  right: 20rpx;
  opacity:0.95;
  background:#3399ff;
  font-size: 32rpx;
  box-shadow:0 3px 5px 0 rgba(51,153,255,0.30);
  color: #fff;
}
