/* pages/forum/publish/inc/component/image/image.wxss */

.photo {
  width: 100%;
}

.photo-img {
  width: 100%;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}


.photo-img-main {
  width: 100%;
}

.photo-img-close {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
}

.photo-img-change {
  text-align: center;
  background: #000;
  border: 2rpx solid #fff;
  border-radius: 200rpx;
  width: 132rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.photo-img-shade {
  text-align: center;
  line-height: 100%;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.50);
}

.photo-img-shade text {
  position: absolute;
  font-size: 42rpx;
  color: #fff;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -62rpx;
}

.cover-content {
  width: 100%;
  height: 80rpx;
  border: 1px solid #e6e6e6;
  border-radius: 12rpx;
  margin-top: 14rpx;
  overflow: hidden;
  background-color: #fff;
  padding-left: 20rpx;
  padding-top: 16rpx;
  box-sizing: border-box;
}

