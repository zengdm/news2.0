 .head {
  padding: 30rpx 0 26rpx 0;
  box-sizing: border-box;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}


.head-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #39f;
  border: 1px solid #39f;
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.10);
  border-radius: 200rpx;
  font-size: 28rpx;
  color: #fff;
  margin: 0;
} 


.sort {
  background: #fff;
  color: #39f;
   /* float: left;  */
}

.cover {
  width: 100%;
   /* padding-top: 120rpx;  */
  margin-bottom: 40rpx;
  padding-top: 30rpx;
}

.cover-img {
  border: 1px solid #e6e6e6;
  border-radius: 12rpx;
  width: 100%;
  min-height: 340rpx;
  line-height: 340rpx;
  text-align: center;
  font-size: 32rpx;
  color: #8a9199;
  overflow: hidden;
  position: relative;
}

.cover-img-add {
  width: 40rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
}

.cover-img-photo {
  width: 100%;
  min-height: 340rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.cover-content {
  width: 100%;
  min-height: 80rpx;
  border: 1px solid #e6e6e6;
  border-radius: 12rpx;
  margin-top: 14rpx;
  overflow: hidden;
  background-color: #fff;
  padding-left: 20rpx;
  padding-top: 16rpx;
  box-sizing: border-box;
}

.cover-content textarea {
  width: 100%;
  font-size: 32rpx;
}

.content {
  margin-top: 40rpx;
}

.content-title {
  font-size: 28rpx;
  color: #8a9199;
  margin-bottom: 14rpx;
}

.content-intro {
  background: #fff;
  border: 1px solid #e6e6e6;
  border-radius: 12rpx;
  width: 100%;
  min-height: 200rpx;
  padding: 16rpx 60rpx 16rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  position: relative;
}

.content-intro textarea {
  width: 100%;
}

.content-intro image {
  width: 28rpx;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
}

.photo {
  width: 100%;
}

.photo-img {
  width: 100%;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.photo-img-main {
  width: 100%;
}

.photo-img-close {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
}

.photo-img-change {
  text-align: center;
  background: #000;
  border: 2rpx solid #fff;
  border-radius: 200rpx;
  width: 132rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.photo-img-shade {
  text-align: center;
  line-height: 100%;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.50);
}

.photo-img-shade text {
  position: absolute;
  font-size: 42rpx;
  color: #fff;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -62rpx;
}

.btn {
  text-align: center;
  margin: 20rpx 0;
}

.btn view {
  width: 160rpx;
  height: 60rpx;
  border: 1px solid #39f;
  border-radius: 200rpx;
  line-height: 60rpx;
  padding-left: 50rpx;
  color: #39f;
  font-size: 28rpx;
  box-sizing: border-box;
  display: inline-block;
  margin: 0 16rpx;
  background: #fff url('http://i1.dd-img.com/assets/image/1514342911-4868f4dee9035581-28w-28h.png') no-repeat 32rpx;
  background-size: 26rpx;
}

.head-sort {
  padding: 15px 0 13px 0;
  box-sizing: border-box;
  line-height: 30px;
  display: flex;
  justify-content: space-between;
}

.head-sort-btn {
  width: 60px;
  height: 30px;
  line-height: 30px;
  background: #39f;
  border: 1px solid #39f;
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.10);
  border-radius: 100px;
  font-size: 14px;
  color: #fff;
  margin: 0;
}

.head-sort text {
  font-size: 28rpx;
  color: #39f;
}

.section {
  background: #fff;
  border: 2rpx solid #e6e6e6;
  border-radius: 6rpx;
  width: 100%;
  height: 62px;
  padding: 7px 30px 7px 10px;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
    /* margin-bottom: 12px;     */
}

.imgs {
  padding: 0;
}

.imgs > image {
  display: inline;
}

.section text {
  font-size: 30rpx;
  line-height: 25px;
  color: #2e3033;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.section-move {
  width: 30px;
  height: 62px;
  text-align: center;
  line-height: 62px;
  position: absolute;
  right: 0;
  top: 0;
  border-radius: 0 6rpx 6rpx 0;
}

.section-move image {
  width: 15px;
}

.imgs-bg {
  background-color: #000;
}


.none {
  display: none;
}

.footer button {
  margin-top: 60rpx;
  height: 88rpx;
  background: #cce7ff;
  color: #fff;
  border-radius: 200rpx;
}

.footer button::after {
  border: none;
}

.footer .btn-color {
  background: #39f;
  box-shadow: 0 6rpx 10rpx 0 rgba(51, 153, 255, 0.30);
}

.tags {
  margin-top: 20rpx;
}

.tags-explain {
  font-size: 28rpx;
  color: #5c6166;
  margin-bottom: 20rpx;
}

.tags-btn {
  background: #fff;
  border: 2rpx solid #39f;
  border-radius: 200rpx;
  width: 204rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #39f;
}

.tags-real {
  border: 2rpx solid #ccc;
  border-radius: 200rpx;
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #8a9199;
  padding: 0 14rpx 0 20rpx;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}

.tags-real image {
  width: 28rpx;
  margin-left: 14rpx;
  margin-bottom: 4rpx;
}

.tags-page {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2000;
}

.tags-page-search {
  width: 100%;
  line-height: 84rpx;
  height: 84rpx;
  margin: 14rpx 0;
  font-size: 0;
  position: relative;
}

.tags-page-search input {
  width: 628rpx;
  height: 84rpx;
  background-color: #fff;
  border: 2rpx solid #e6e6e6;
  border-radius: 6rpx;
  line-height: 84rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.tags-page-search image {
  width: 32rpx;
  margin-left: 30rpx;
  position: absolute;
  top: 26rpx;
  right: 0rpx;
}

.tags-page-explain {
  font-size: 28rpx;
  color: #8a9199;
}

.tags-page-explain text {
  color: #39f;
}

.hot {
  margin-top: 80rpx;
}

.hot-header {
  font-size: 32rpx;
  color: #2e3033;
  font-weight: bold;
}

.hot-section-title {
  font-size: 28rpx;
  color: #5c6166;
  margin: 40rpx 0 20rpx 0;
}

.hot-section text {
  background: #fff;
  text-align: center;
  border: 2rpx solid #ccc;
  border-radius: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  min-width: 80rpx;
  padding: 0 20rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #8a9199;
}

.moveable_row {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
}

.touchView {
  z-index: 200;
  width: 100px;
  position: absolute;
  top: 0;
  right: 0;
}

.dragSelected {
  background-color: #ccc;
  /* margin-bottom: 12px; */
}

.footerbtn{
  border-top: 2rpx solid #e6e6e6;
  padding-top: 30rpx;
  padding-bottom: 36rpx;
  margin: 60rpx -28rpx 0; 
  display:flex;
  justify-content:space-between;
}

.footerbtn-sort{
  width: 200rpx;
  height: 88rpx;
  color:#2e3033;
  line-height: 88rpx;
  border: 1px solid #8a9199;
  border-radius: 200rpx;
  font-size: 34rpx;
  margin-left: 30rpx;
  background: #fff url(http://i1.dd-img.com/assets/image/1517309827-7b10ead3bf60a3d2-40w-40h.png) no-repeat 42rpx 28rpx;
  background-size: 38rpx;
  padding-left: 84rpx;
  box-sizing: border-box;
}

.footerbtn-publist{
   width: 470rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  background: #39f;
  /* border: 1px solid #39f; */
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.10);
  border-radius: 200rpx;
  font-size: 34rpx;
  margin-right: 30rpx;
}
.footerbtn-publist::after{
  border: none;
}

.moveable_row .section{
   box-shadow: 0 0 6rpx 4rpx rgba(0, 0, 0, 0.06);
}

