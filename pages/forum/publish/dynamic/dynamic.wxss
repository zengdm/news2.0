/* pages/forum/publish/dynamic/dynamic.wxss */
.main{
  width: 100%;
  min-height: 100%;
  background-color: #f8f8f8;
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}
.header{
  padding:40rpx 0 16rpx 10rpx; 
  font-size:32rpx;
  color:#2e3033;
  display: flex;
  justify-content: space-between; 
}

.header-cancel{
  color:#3399ff;
  font-weight:600;
}
.section{
  background: #fff;
  border-radius:6rpx;
  border:2rpx solid #e6e6e6;
  padding: 20rpx;
  box-sizing: border-box;
}
.section textarea{
  font-size:30rpx;
  color:#000000;
   min-height:300rpx; 
   width: 100%;
}


.footer button{
  margin-top: 60rpx;
  height: 88rpx;
  background:#cce7ff;
  color: #fff;
  border-radius:200rpx;
}
.footer button::after{
  border: none;
}
.footer .btn-color{
  background:#3399ff;
  box-shadow:0 6rpx 10rpx 0 rgba(51,153,255,0.30);
}

.photos{
  width: 100%;

}
.photos-title{
  line-height:92rpx; 
  font-size:28rpx;
  color:#2e3033;
}
.photos-add{
  font-size: 0;
}
.photos-add-none{
  width: 148rpx;
  height: 148rpx;
  line-height: 148rpx;
  text-align: center;
  background: #f8f8f8;
  border: 2rpx solid #ccc;
  border-radius: 12rpx;
  overflow: hidden;
  display: inline-block;
  margin-right: 30rpx;
  margin-bottom:30rpx 

}
.photos-add-none-img{
  width: 40rpx;
}

.photos-add-none:nth-of-type(4n){
  margin-right: 0;
}
.photos-add-item{
   border: none;
   position: relative; 
}

.photos-add-item-img{
  width: 150rpx;
  height: 150rpx;
}
.photos-add-item-close{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top:8rpx;
  right: 8rpx; 
}

.photos-add-state{
  position: relative;
}
.photos-add-item-uploading{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
  font-size:28rpx;
  color:rgba(255,255,255,0.8);
  background:rgba(0,0,0,0.50); 
}


.tags{
  margin-top: 20rpx;

}
.tags-explain{
  font-size:28rpx;
  color:#5c6166;
  margin-bottom: 20rpx;
}
.tags-btn{
  background:#ffffff;
  border:2rpx solid #3399ff;
  border-radius:200rpx;
  width:204rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size:28rpx;
  color:#3399ff;
}
.tags-real{
  border:2rpx solid #cccccc;
  border-radius:200rpx;
  background: #fff;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  font-size:28rpx;
  color:#8a9199;
  padding: 0 14rpx 0 20rpx;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
}
.tags-real image{
  width: 28rpx;
  margin-left: 14rpx;
  margin-bottom: 4rpx;
}



 .tags-page{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2000;
}

.tags-page-search{
  width: 100%;
  line-height: 84rpx;
  height: 84rpx;
  margin: 14rpx 0;
  font-size: 0;
  position: relative;
}
.tags-page-search input{
  width: 628rpx;
  height: 84rpx;
  background-color: #fff;
  border:2rpx solid #e6e6e6;
  border-radius:6rpx;
  line-height: 84rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}
.tags-page-search image{
  width: 32rpx;
  margin-left:30rpx;
  position: absolute;
  top: 26rpx;
  right: 0rpx;
}
.tags-page-explain{
  font-size:28rpx;
  color:#8a9199;
}
.tags-page-explain text{
  color: #3399ff;
}
.hot{
  margin-top: 80rpx;
}
.hot-header{
  font-size:32rpx;
  color:#2e3033;
  font-weight: bold;
}

.hot-section-title{
  font-size:28rpx;
  color:#5c6166;
  margin: 40rpx 0 20rpx 0
}

.hot-section text{
  background:#ffffff;
  text-align: center;
  border:2rpx solid #cccccc;
  border-radius:200rpx;
  height:60rpx;
  line-height: 60rpx;
  display: inline-block;
  min-width: 80rpx;
  padding: 0 20rpx;
  margin-right: 30rpx;
  font-size:28rpx;
  color:#8a9199;
}
.none{
  display: none;
} 