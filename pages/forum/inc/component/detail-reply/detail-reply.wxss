.info_comment_img {
  width: 42.874rpx;
  height: 41.062rpx;
  padding-right: 10rpx;
}

.info_comment_count {
  float: right;
  margin-top: 22rpx;
  margin-right: 10rpx;
  color: #24ceef;
}

.write_commit_close {
  width: 34rpx;
  height: 34rpx;
  float: right;
}

.none {
  display: none;
}

.hint {
  width: 280rpx;
  height: 140rpx;
  background: url('http://i1.dd-img.com/assets/image/1515121963-11647858df0c73d3-302w-146h.png') no-repeat;
  background-size: 280rpx;
  position: fixed;
  bottom: 56rpx;
  right: 50rpx;
  z-index: 1000;
  font-size: 28rpx;
  color: #fff;
  padding: 20rpx 0 20rpx 26rpx;
  box-sizing: border-box;
}


.write_commit_button button{
  margin-top: 60rpx;
  height: 88rpx;
  background:#cce7ff;
  color: #fff;
  border-radius:200rpx;
}
.write_commit_button button::after{
  border: none;
}
.write_commit_button .btn-color{
  background:#3399ff;
  box-shadow:0 6rpx 10rpx 0 rgba(51,153,255,0.30);
}