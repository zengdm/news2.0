.footer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #f8f8f8;
}
.onshare{
    display: block;
    width:20rpx;
    float:left;

}

.footer-empty {
  width: 100%;
  height: 10rpx;
  background-image: linear-gradient(to bottom, #e6e6e6, #f8f8f8);
}

.footer-intro {
  line-height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.footer-intro text {
  font-size: 32rpx;
  color: #5c6166;
}

.footer-intro image {
  width: 36rpx;
  margin-left: 40rpx;
}

.write_commit {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
}

.write_commit_txt_title {
  /* height: 114rpx;
  line-height: 114rpx; */
  padding: 40rpx 0 16rpx 10rpx;
  font-size: 32rpx;
  color: #2e3033;
}

.info_textarea {
  border: 1px solid #e6e6e6;
  width: auto;
  border-radius: 3px;
  background: #fff;
  height: 290rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.write_commit_button {
  width: 100%;
  margin-right: 0;
  text-align: right;
  height: 60rpx;
  margin-top: 60rpx;
}

