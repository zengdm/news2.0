/* pages/user/fans/fans.wxss */
.main{
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}
page{
      background-color: #f8f8f8;
}
.collectnot{
   background:#fff;
border-radius:10rpx;
/* width:320px; */
height:96rpx; 
margin: 40rpx 56rpx;
padding: 32rpx 40rpx;
line-height: 48rpx;
font-size:24rpx;
color:#999999;
text-align: center;
}
.collectnot text{
  display:block;
}
.item{
  width: 100%;
  border-bottom: 2rpx solid #f2f2f2;
  background-color: #fff;
}
.item-box{
  padding: 30rpx;
  box-sizing: border-box;
  display: -webkit-box;
  -webkit-box-orient: horizontal;    
  -webkit-box-align: center;
}
.item-box-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.item-box-img image{
  width: 100rpx;
}
.item-box-info{
  -webkit-box-flex: 1;
  margin-left: 20rpx;
}
.item-box-info text{
  font-size:30rpx;
  color:#5c6166;
  line-height: 28rpx;
}
.item-box-info view{
  font-size:22rpx;
  color:#8a9199;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item-box-state{
  width: 180rpx;
  text-align: right;
  font-size:28rpx;
  color:#8a9199;
}
.follow{
  color:#3399ff;
  background: url('http://i1.dd-img.com/assets/image/1514342911-4868f4dee9035581-28w-28h.png') no-repeat 90rpx;
  background-size:26rpx; 
}
