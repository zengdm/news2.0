color:#999999;
text-align: center;
}
.collectnot text{
  display:block;
}
.swiper-tab-item {
  width: 136rpx;
    border-bottom: 6rpx solid #fafafa; 
}
.on{
  color: #33adff;
  border-bottom: 6rpx solid #33adff;
}
.swiper-tab-type {
  display: flex;
  width: 320rpx;
  margin:0 auto;
  justify-content: space-around;
  align-items: center;
  margin-top:30rpx;
  margin-bottom:30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #b2b2b2;
}
.swiper-tab-item-type {
  width:160rpx;
  border-radius: 30rpx 0 0 30rpx;
  background-color: #fff;
}
.swiper-tab-item-type:nth-child(2){
   border-radius: 0 30rpx 30rpx 0;
}
