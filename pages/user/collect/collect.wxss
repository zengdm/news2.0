}
.drawer-child-intro-car{
     justify-content: flex-start;
  align-items: center;
  display: flex;   
}

.drawer-info {
  padding-left: 20rpx;
  position: relative;
  /* font-size: 0; */
}
.drawer-info > text {
  max-width: 290rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: inline-block;
  font-size: 34rpx;
  color: #333;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.drawer-title{
  width: 430rpx;
  padding-left: 20rpx;
  display:inline-block;
  position: relative;
}
.drawer-title > text{
  font-size: 34rpx;
  color: #333;
  display: inline-block;
    /* height: 120rpx;  */ 
  overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}

.drawer-info-price {
  font-size: 24rpx;
  color: #999;
  padding-top: 20rpx;
}

.drawer-info-price-no {
  font-size: 28rpx;
  color: #ccc;
}

.drawer-price {
  color: #d0011b;
  padding-top: 20rpx;
   font-size: 28rpx; 
}

.img-model {
   width: 240rpx;
  height: 160rpx;
  border-radius: 0;
  display: inline-block;
  overflow: hidden;
}

.drawer-endurance {
  width: 112rpx;
  height: 84rpx;
  color: #33adff;
  background: url("http://i1.dd-img.com/assets/image/1510122385-093826c8cf8ed6d1-100w-80h.png") no-repeat;
  background-size: 100%;
  text-align: center;
}

.drawer-endurance text {
  font-size: 36rpx;
