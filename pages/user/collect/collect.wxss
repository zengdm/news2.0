}
.header .border{
  color: #FFFFFF;
  border-bottom: 4rpx solid #fff; 
}
.main-scroll{
  margin-top: 60rpx;
}

.swiper-tab {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height:81rpx;
  padding-bottom: 6rpx;
  line-height:84rpx;
  text-align: center;
  color: #666666;
  font-size: 34rpx;
  border-bottom: solid 1rpx #e6e6e6;
  background-color: #fafafa;
