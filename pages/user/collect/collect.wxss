::-webkit-scrollbar {
  /*隐藏滚动条*/
  width: 0;
  height: 0;
  color: transparent;
}

.drawer-child {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 200rpx;
  overflow: hidden;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  margin: 0 30rpx;
}

.drawer-child-intro {
  width: 100%;
    /* justify-content: flex-start;
