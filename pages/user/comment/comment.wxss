/* pages/user/follow/follow.wxss */

page {
    background-color: #f8f8f8;
}

.main {
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
}

.collectnot {
    background: #fff;
    border-radius: 10rpx;
    /* width:320px; */
    height: 96rpx;
    margin: 40rpx 56rpx;
    padding: 32rpx 40rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

.collectnot text {
    display: block;
}

.header {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: #39f;
    font-size: 28rpx;
    color: #fff;
}

.header text {
    margin: 0 40rpx;
    padding-bottom: 6rpx;
    color: #cce7ff;
}

.header .border {
    color: #fff;
    border-bottom: 4rpx solid #fff;
}

.item {
    width: 100%;
    border-bottom: 2rpx solid #f2f2f2;
    /* background-color: #fff; */
}

.item-box {
    padding: 30rpx;
    box-sizing: border-box;
    margin-bottom:10rpx;
    background:#fff;

}

.item-box-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}

.item-box-img image {
    width: 100rpx;
    height: 100rpx;
}

.item-topic-img {
    border-radius: 12rpx;
}

.item-info-state {
    display: -webkit-box;
    -webkit-box-orient: horizontal;
    -webkit-box-align: center;
}

.item-info-left {
    /* float: left; */
    width: 495rpx;
    line-height: 44rpx;
    height: 44rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #424242;
}

.item-info-right {
    /* float: right; */
    color: #8c8c8c;
}

.item-info-count {
    text-align: left;
    line-height: 85rpx;
    height: 85rpx;
}

.item-info-count view {
    width: 515rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    /* display: inline-block; */
    float: left;
       color: #2e93ea;
}

.item-info-count text {
    color: #9c9c9c;
    padding: 0 0.3rem 0 0;
    /* display: inline-block; */
    float: left;
}

.item-box-info {
    -webkit-box-flex: 1;
    margin-left: 20rpx;
}

.item-box-info text {
    font-size: 30rpx;
    color: #5c6166;
    line-height: 28rpx;
}

.item-box-info view {
    font-size: 22rpx;
    color: #8a9199;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item-box-state {
    width: 180rpx;
    text-align: right;
    font-size: 28rpx;
    color: #8a9199;
}

.follow {
    color: #39f;
    background: url('http://i1.dd-img.com/assets/image/1514342911-4868f4dee9035581-28w-28h.png') no-repeat 90rpx;
    background-size: 26rpx;
}

.none {
    display: none;
}
