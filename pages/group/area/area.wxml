<!--pages/wx_city/wx_city.wxml-->
<view class='body'>
  <view class='section'>
    <view class='title'>
      <text>地区群组</text>
    </view>

    <view class='car'>

       <view class='car-intro' bindtap="carDetail" wx:for="{{cityGroup}}"  data-id="{{item.id}}" data-name='{{item.name}}' data-summary='{{item.summary}}' data-masterName='{{item.master_name}}' data-masterNumber='{{item.master_number}}' data-masterQr='{{item.master_qr}}' data-cover='{{item.cover}}'>
        <image mode='widthFix' class='car-intro-img' src='{{item.cover}}'></image>
        <view class='car-intro-name'>{{item.name}}</view>
      </view>

    </view>
  </view>

</view>
