/* pages/wx_car/wx_car.wxss */

.body {
  width: 100%;
  height: 100%;
  background: #fafafa;
}

.letter {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

.letter>text {
  font-size: 34rpx;
  color: #666;
  padding-left: 30rpx;
}
.car{
  padding:0 0 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 0;
}
.car-intro{
  width: 198rpx;
  height: 182rpx;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
  display: inline-block;
  margin-right: 40rpx;
}
.car-intro-img{
  width: 198rpx;
  height: 132rpx;
}
.car-intro-name{
  font-size:28rpx;
  color:#666666;
   text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}