<view class="search">
    <icon class="icon-search" type="search" size="13" color="#9a9a9a"></icon>
    <view class="search-box" bindtap="searchTag">请输入想查找的车型</view>
</view>
<scroll-view class="swiper-content" scroll-y="{{scrollBoolean}}" enable-back-to-top='true' style="height:{{winHeight-46}}px" bindscroll="scroll" scroll-into-view="{{toView}}" class="{{showmask ? 'hiddenClass' :''}}">

    <swiper class="header-pic">
        <block>
            <swiper-item>
                <image class='headerimg' mode='widthFix' src="http://i1.dd-img.com/assets/image/1517466287-c9410f73f5d7c3c0-750w-320h.png"></image>


